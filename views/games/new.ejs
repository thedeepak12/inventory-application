<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/css/output.css">
  <title>Add New Game</title>
</head>
<body class="bg-gray-900 text-white min-h-screen p-4">
  <div class="max-w-md mx-auto mt-10 mb-10 p-6 bg-gray-800 rounded-lg">
    <h1 class="text-2xl font-bold mb-6">Add New Game</h1>

    <form action="/games" method="POST" class="space-y-4">
      <div>
        <label for="title" class="block mb-1">Game Title</label>
        <input
          type="text"
          id="title"
          name="title"
        required
        class="w-full p-2 bg-gray-700 border border-gray-600 rounded"
      />
    </div>

    <div>
      <label for="image_url" class="block mb-1">Image URL</label>
      <input type="url" id="image_url" name="image_url" class="w-full p-2 bg-gray-700 border border-gray-600 rounded" />
    </div>

    <div>
      <label for="genre_ids" class="block mb-1">Genre IDs (comma-separated)</label>
      <input
        type="text"
        id="genre_ids"
        name="genre_ids"
        placeholder="e.g., 1,2,3"
        required
        class="w-full p-2 bg-gray-700 border border-gray-600 rounded"
      />
      <small class="text-gray-400">Available genres:</small>
      <div class="text-sm text-gray-300 mt-1">
        <% genres.forEach(genre => { %>
          <span class="mr-4"><%= genre.id %>: <%= genre.name %></span>
        <% }); %>
      </div>
    </div>

    <div>
      <label for="developer_ids" class="block mb-1">Developer IDs (comma-separated)</label>
      <input
        type="text"
        id="developer_ids"
        name="developer_ids"
        placeholder="e.g., 1,2,3"
        required
        class="w-full p-2 bg-gray-700 border border-gray-600 rounded"
      />
      <small class="text-gray-400">Available developers:</small>
      <div class="text-sm text-gray-300 mt-1">
        <% developers.forEach(developer => { %>
          <span class="mr-4"><%= developer.id %>: <%= developer.name %></span>
        <% }); %>
      </div>
    </div>

    <div>
      <label for="secret_key" class="block mb-1">Admin Key</label>
      <input
        type="password"
        id="secret_key"
        name="secret_key"
        required
        class="w-full p-2 bg-gray-700 border border-gray-600 rounded"
      />
    </div>

    <div class="flex justify-end space-x-4 pt-4">
      <a href="/" class="px-4 py-2 bg-gray-600 rounded hover:bg-gray-500 cursor-pointer">
        Cancel
      </a>
      <button type="submit" class="px-4 py-2 bg-blue-600 rounded hover:bg-blue-700 cursor-pointer">
        Add Game
      </button>
    </div>
  </form>
</div>
</body>
</html>