<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/css/output.css">
  <title>Add New Game</title>
</head>
<body class="bg-gray-900 text-white min-h-screen p-4">
  <div class="max-w-2xl mx-auto mt-10 mb-10 p-6 bg-gray-800 rounded-lg">
    <h1 class="text-2xl font-bold mb-6">Add New Game</h1>

    <form action="/games" method="POST" class="space-y-4">
      <div>
        <label for="title" class="block mb-1">Game Title</label>
        <input
          type="text"
          id="title"
          name="title"
          required
          class="w-full p-2 bg-gray-700 border border-gray-600 rounded"
        />
      </div>

      <div>
        <label for="image_url" class="block mb-1">Image URL</label>
        <input 
          type="url" 
          id="image_url" 
          name="image_url" 
          class="w-full p-2 bg-gray-700 border border-gray-600 rounded" 
        />
      </div>

      <div>
        <label class="block mb-1">Genres</label>
        <div class="grid grid-cols-3 gap-2 mt-2">
          <% genres.forEach(genre => { %>
            <div class="flex items-center">
              <input 
                type="checkbox" 
                id="genre_<%= genre.id %>" 
                name="genre_ids" 
                value="<%= genre.id %>"
                class="h-4 w-4 text-blue-600 rounded border-gray-600 bg-gray-700 focus:ring-blue-500"
              >
              <label for="genre_<%= genre.id %>" class="ml-2 text-sm"><%= genre.name %></label>
            </div>
          <% }); %>
        </div>
      </div>

      <div>
        <label class="block mb-1">Developers</label>
        <div class="grid grid-cols-3 gap-2 mt-2">
          <% developers.forEach(developer => { %>
            <div class="flex items-center">
              <input 
                type="checkbox" 
                id="developer_<%= developer.id %>" 
                name="developer_ids" 
                value="<%= developer.id %>"
                class="h-4 w-4 text-blue-600 rounded border-gray-600 bg-gray-700 focus:ring-blue-500"
              >
              <label for="developer_<%= developer.id %>" class="ml-2 text-sm"><%= developer.name %></label>
            </div>
          <% }); %>
        </div>
      </div>

      <div>
        <label for="ADMIN_KEY" class="block mb-1">Admin Key</label>
        <input
          type="password"
          id="ADMIN_KEY"
          name="ADMIN_KEY"
          required
          class="w-full p-2 bg-gray-700 border border-gray-600 rounded"
        />
      </div>

      <div class="flex justify-end space-x-4 pt-4">
        <a href="/" class="px-4 py-2 bg-gray-600 rounded hover:bg-gray-500 cursor-pointer">
          Cancel
        </a>
        <button type="submit" class="px-4 py-2 bg-blue-600 rounded hover:bg-blue-700 cursor-pointer">
          Add Game
        </button>
      </div>
    </form>
  </div>
</body>
</html>